@page "{id:int}"
@model gestion_budget.Pages.Back_Office.Categories.EditModel
@{
    ViewData["Title"] = "Modifier une Catégorie";
}

<h2 class="mb-4">Modifier la Catégorie</h2>

<form method="post" class="border p-4 rounded">
    <input type="hidden" asp-for="Category.CategoryId" />

    <div class="mb-3">
        <label asp-for="Category.Name" class="form-label">Nom</label>
        <input type="text" asp-for="Category.Name" class="form-control" required />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category.IsIncome" class="form-label">Type</label>
        <select asp-for="Category.IsIncome" class="form-select" required>
            <option value="true">Revenu</option>
            <option value="false">Dépense</option>
        </select>
        <span asp-validation-for="Category.IsIncome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category.ParentCategoryId" class="form-label">Catégorie Parente</label>
        <select asp-for="Category.ParentCategoryId" class="form-select">
            <option value="">Aucune</option>
            @foreach (var parentCategory in Model.ParentCategories)
            {
                <option value="@parentCategory.CategoryId">@parentCategory.Name</option>
            }
        </select>
        <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
        <a asp-page="/Back-Office/Categories/lists" class="btn btn-secondary">Annuler</a>
    </div>
</form>
