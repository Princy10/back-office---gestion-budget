@page "{id:int}"
@model gestion_budget.Pages.Back_Office.Categories.EditModel
@{
    ViewData["Title"] = "Modifier une Catégorie";
}

<h2>Modifier la Catégorie</h2>

<form method="post">
    <input type="hidden" asp-for="Category.CategoryId" />
    <div>
        <label asp-for="Category.Name">Nom</label>
        <input type="text" asp-for="Category.Name" class="form-control" required />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Category.IsIncome">Type</label>
        <select asp-for="Category.IsIncome" class="form-control" required>
            <option value="true">Revenu</option>
            <option value="false">Dépense</option>
        </select>
        <span asp-validation-for="Category.IsIncome" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Category.ParentCategoryId">Catégorie Parente</label>
        <select asp-for="Category.ParentCategoryId" class="form-control">
            <option value="">Aucune</option>
            @foreach (var parentCategory in Model.ParentCategories)
            {
                <option value="@parentCategory.CategoryId">
                    @parentCategory.Name
                </option>
            }
        </select>
        <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>
