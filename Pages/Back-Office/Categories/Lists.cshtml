@page
@model gestion_budget.Pages.Back_Office.Categories.CategoriesModel
@{
    ViewData["Title"] = "Gestion des Catégories";
}

<h2>Liste des Catégories</h2>

@if (Model.DisplayedCategories.Any())
{
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Parent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.DisplayedCategories)
            {
                <tr>
                    <td style="padding-left:@((category.ParentCategoryId != null) ? "20px" : "0px");">
                        @category.Name
                    </td>
                    <td>@(category.IsIncome ? "Revenu" : "Dépense")</td>
                    <td>@category.ParentCategory?.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-page="/Back-Office/Categories/edit" asp-route-id="@category.CategoryId">Modifier</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@category.CategoryId" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucune catégorie disponible.</p>
}

<div class="pagination">
    <ul class="pagination-list">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a asp-page-handler="OnGetAsync" asp-route-pageNumber="@(Model.CurrentPage - 1)">Précédent</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="@(i == Model.CurrentPage ? "active" : "")">
                <a asp-page-handler="OnGetAsync" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a asp-page-handler="OnGetAsync" asp-route-pageNumber="@(Model.CurrentPage + 1)">Suivant</a>
            </li>
        }
    </ul>
</div>

<button>
    <a class="nav-link text-dark" asp-area="" asp-page="/Back-Office/Categories/add">Ajouter une catégorie</a>
</button>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
