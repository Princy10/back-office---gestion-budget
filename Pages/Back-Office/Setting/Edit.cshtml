@page "{id:int}"
@model gestion_budget.Pages.Back_Office.Setting.EditModel
@{
    ViewData["Title"] = "Modifier un paramètre";
}

<h1>Modifier un paramètre</h1>

<form method="post">
    <input type="hidden" asp-for="DefaultSetting.DefaultSettingId" />
    <div class="form-group">
        <label for="UserId">Utilisateur</label>
        <select asp-for="DefaultSetting.UserId" asp-items="Model.Users" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="CategoryId">Catégorie</label>
        <select asp-for="DefaultSetting.CategoryId" asp-items="Model.Categories" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="DefaultLimit">Plafond par défaut</label>
        <input asp-for="DefaultSetting.DefaultLimit" class="form-control" />
        <span asp-validation-for="DefaultSetting.DefaultLimit" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-page="./Index" class="btn btn-secondary">Annuler</a>
</form>
