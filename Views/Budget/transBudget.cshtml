

<h2>Transactions pour le budget</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Montant</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                <td>@transaction.Description</td>
                <td>@transaction.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
